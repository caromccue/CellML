#!/usr/bin/env pythonw
import os
import argparse

from crystalml.src.crystal_processing.process_image_folder import process_image_folder

# Setup parser
ap = argparse.ArgumentParser()
ap.add_argument("-d", "--directory", nargs='+', default=os.getcwd(), help="Path of the directory")

args = ap.parse_args()

process_image_folder(args.directory)